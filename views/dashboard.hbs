<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {{!-- your css file should be link after bootstrap  --}}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <title>Home</title>
</head>
<body>
    <nav>
        <h4>Admin Dashboard</h4>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/logout">Logout</a></li>
        </ul>
    </nav>

    {{#if message}}
        <h4 class="alert alert-success my-4">{{ message }}</h4>
    {{/if}}

    <div class="container mt-4">
        <div class="card">
            <h5 class="card-header">Welcome {{ user }}</h5>
            <div class="card-body">
                <p class="card-text">Email: {{ email }}</p>
                <p class="card-text">Token: {{ token }}</p>
                <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
            </div>
        </div>
    </div>

    <div class="container mt-4">
        <h1>Pending Order</h1>
        <div id="getcount">Total Pending Orders</div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Order Number</th>
                    <th scope="col">Foods</th>
                    <th scope="col">Customer Name</th>
                    <th scope="col">Phone No.</th>
                </tr>
            </thead>
            <tbody id="orderTable">
                {{#if data}}
                    {{#each data}}
                        <tr>
                            <th scope="row">{{ id }}</th>
                            <td>{{ food }}</td>
                            <td>{{ name }}</td>
                            <td>{{ phone }}</td>
                        </tr>
                    {{/each}}
                {{/if}}
                <table id="myTable" class="table">
                    
                </table>
            </tbody>
        </table>

    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script>
        const myTable = document.getElementById('myTable');
        const orderTable = document.getElementById('orderTable');
        var socket = io.connect();
        const addRowToTable = (data) => {
            myTable.innerHTML = "";
            orderTable.innerHTML = "";
            const newData = Object(data);
            newData.forEach((item, idx) => {
                console.log(item);
                var table = document.getElementById("myTable");
                var row = table.insertRow(0);
                var cell1 = row.insertCell(0);
                var cell2 = row.insertCell(1);
                var cell3 = row.insertCell(2);
                var cell4 = row.insertCell(3);
                cell1.innerHTML = item.id;
                cell2.innerHTML = item.food;
                cell3.innerHTML = item.name;
                cell4.innerHTML = item.phone;
            });
        }
        socket.on('broadcast', (data) => {
            addRowToTable(data);
        });
    </script>
</body>
</html>